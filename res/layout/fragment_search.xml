<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF7C00"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_tv_apm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:text="VOD"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/lf_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:background="@drawable/ic_navigation_prev_selector"
        android:gravity="center_vertical" />

    <Button
        android:id="@+id/rt_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="2dp"
        android:background="@drawable/ic_navigation_next_selector"
        android:gravity="center_vertical" />

    <GridView
        android:id="@+id/gridview_new_release"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/home_page_no"
        android:layout_below="@+id/search_et_fs"
        android:layout_toLeftOf="@+id/rt_button"
        android:layout_toRightOf="@+id/lf_button"
        android:columnWidth="100dp"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:nextFocusRight="@+id/rt_button"
        android:numColumns="2"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="35dp" >
    </GridView>

    <EditText
        android:id="@+id/search_et_fs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lf_button"
        android:layout_below="@+id/title_tv_apm"
        android:layout_marginLeft="23dp"
        android:ems="10" >
        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/search_imgbtn_fs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridview_new_release"
        android:layout_toRightOf="@+id/search_et_fs"
        android:onClick="searchBtn_Onclick"
        android:src="@android:drawable/ic_menu_search" />

</RelativeLayout>